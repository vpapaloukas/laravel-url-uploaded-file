{
    "name": "vpap/laravel-url-uploaded-file",
    "description": "A package to leverage Laravel's UploadedFile functionality from URLs.",
    "keywords": [
        "laravel",
        "laravel-url-uploaded-file"
    ],
    "authors": [
        {
            "name": "Daniel Naxon",
            "email": "naxond@gmail.com",
            "homepage": "https://naxon.dev",
            "role": "Original Repository Developer"
        },
        {
            "name": "Vagelis Papaloukas",
            "email": "vpapaloukas.codes@gmail.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/http": "^8.0|^9.0|^10.0",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "orchestra/testbench": "^6.2|^7.0|^8.0",
        "phpmd/phpmd": "^2.11",
        "phpunit/phpunit": "^9.4|^10.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Vpap\\UrlUploadedFile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vpap\\UrlUploadedFile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": ["phpunit --colors=always tests"],
        "test-coverage": ["phpunit --whitelist src --coverage-html coverage tests"],
        "format": "php-cs-fixer"
    },
    "config": {
        "sort-packages": true
    }
}
